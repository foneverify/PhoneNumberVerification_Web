function selectCountry() {
    $("#Other").hide();
    $("#selectCountry").change(function () {
        if ($(this).val() == 1) {
            $("#India").show();
            $("#Other").hide();
        }
        else {
            $("#India").hide();
            $("#Other").show();
        }
    });
}

